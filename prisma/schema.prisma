generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model novels {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  title  String   @unique
  author String
  tags   String[]
  body   String
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
}
